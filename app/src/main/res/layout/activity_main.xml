<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/reli"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@drawable/sidebutton"
        android:layout_alignParentBottom="true"
        android:elevation="1dp">

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/camera"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gallery_layout"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sidebuttonright"
        android:orientation="vertical">

        <Button
            android:id="@+id/gallery_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/foldericon" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/whitebg">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:id="@+id/imageView"
            android:scaleType="fitCenter"
            android:src="@drawable/plantbg"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/demoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="visible"
                android:text="First, Import Image using your Camera"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:lineSpacingMultiplier="0.9"
                android:textSize="14sp"
                android:justificationMode="inter_word"
                tools:targetApi="o"/>

                <ImageView
                    android:id="@+id/demoArrow"
                    android:layout_width="170dp"
                    android:layout_height="180dp"
                    android:src="@drawable/arrow"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:rotation="-30"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Disease is Identified as:"
                    android:textSize="19sp"
                    android:id="@+id/classification"
                    android:includeFontPadding="false"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFE500"
                    android:textSize="24sp"
                    android:id="@+id/result"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.06"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:focusable="true"/>

                 <Button
                    android:id="@+id/moreInfoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More Info"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center" />


                <TextView
                    android:id="@+id/clickhere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="click on the Disease name to know more online"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="50dp"/>

        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>
